<div class="row">
	<div class="span12">
	<%= form_tag sessions_path do %>
		<div id="login-box" class="field">
	    	<div id="login-element">
	    		<h3><p>Please Sign In</p></h3>
	    	</div>

		<div style="margin-left:30%;">
			<div class="row">
			    	<div class="span6">
			     		<p id="font_session">E-mail: 
			     	<!--</div> 
			     			<div class="span4">-->
			     			<%= text_field_tag :email, params[:email] %></p>
			     	</div>
			     	
			     	<div class="span6">
			     		<p id="font_session">Password:
			     	<!--</div>
				     		<div class="span4">-->
				     		<%= password_field_tag :password %>
				   	 		<%= submit_tag "Log In", class: "btn btn-success" %> </p>
					</div>
		   	</div>
		</div>
		</div>
	</div>
</div>
<% end %>