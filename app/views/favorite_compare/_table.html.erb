<table>
<thead>
  <tr class="table">
    <th></th>
    <th><%= t "companies.attributes.industry" %></th>
    <th><%= t "internships.attributes.salary" %></th>
    <th><%= t "internships.attributes.working_hours" %></th>
    <th><%= t "internships.attributes.living_costs" %></th>
    <th><%= t "internships.attributes.semester" %></th>
    <th><%= t "internships.attributes.orientation" %></th>
    <th><%= t "internships.attributes.programming_language" %></th>
    <th><%= t "internships.attributes.rating" %></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @internships.each do |internship| %>
  <tr>
		<td>
		<h3><%= internship.title %></h3>
    <h3>at <%= internship.company.name %></h3>
    <h3>in <%= internship.company.city %>, <%= internship.company.country %></h3>
  	</td>
    <td><%= internship.company.industry %></td>
    <td><%= internship.salary %> €/<%= t("unit.month")%></td>
    <td><%= internship.working_hours %>/<%= t("unit.week")%></td>
    <td><%= internship.living_costs %> €/<%= t("unit.month")%></td>
    <td><%= internship.semester.name %></td>
    <td><%= internship.orientation.name %></td>
    <td><%= internship.programming_languages.map { |n| n.name }.join(", ") %></td>
    <td><%= internship.rating %></td>
  </tr>
<% end %>
</tbody>
</table>