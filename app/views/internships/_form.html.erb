<div class="row">
<div class="span6">
<%= nested_form_for(@internship) do |f| %>
  <% if @internship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@internship.errors.count, "error") %> prohibited this internship from being saved:</h2>

      <ul>
      <% @internship.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t "internships.attributes.title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label t "internships.attributes.company" %>
    <%= f.select :company_id, Company.order(:name).map { |c| [c.name, c.id] },{}, class: 'chzn-select'  %>
  </div>
  <div class="field">
    <%= f.label t "internships.attributes.orientation" %><br />
    <%= f.select :orientation_id, @orientations,{}, class: 'chzn-select' %>
  </div>
  <div class="field">
    <%= f.label t "internships.attributes.programming_language"  %><br />
    <%= f.select :programming_language_ids, @programming_languages, {}, { :multiple => true, class: 'chzn-select'} %>
  </div>
  <div class="field">
    <%= f.label t "internships.attributes.salary"  %><br />
    <%= f.number_field :salary %>
  </div>
  <div class="field">
    <%= f.label t "internships.attributes.working_hours"  %><br />
    <%= f.text_field :working_hours %>
  </div>
  <div class="field">
    <%= f.label t "internships.attributes.living_costs "+t("unit.month")  %><br />
    <%= f.text_field :living_costs %> 
  </div>

  <div class="field">
    <%= f.label t "internships.attributes.semester"  %><br />
      <%= f.select :semester_id, get_semesters, {}, class: 'chzn-select' %>
  </div>

  <div class="field">
    <%= f.label t "internships.attributes.description"  %><br />
    <%= f.text_area :description %>
  </div>

   <%= f.fields_for :attachments do |attachment_form|  %>
    <p>
    <%= attachment_form.label :description %><br />
    <%= attachment_form.text_field :description %>
    </p>
    <p>
    <%= attachment_form.label :file %><br />
    <%= attachment_form.file_field :file %>
    </p>
    <%= attachment_form.link_to_remove t("attachment.remove") %>
  <% end %>
  <%= f.link_to_add  t("attachment.add"), :attachments %>
  <hr/>
  <br />
  <br />
    <div class="field">
    <%= f.label t "internships.attributes.internship_report"  %>
    <%= f.file_field :internship_report %>
    </div
  <br />

  <%= f.fields_for :internship_rating do |rat| %>
  <div class="field">
    <%= rat.label t "internships.attributes.tasks_rating" %><br />
    <div class="edit-rating" id="tasks"><%= render_stars(@rating.tasks, self) %></div>
    <%= rat.hidden_field :tasks %>
  </div>
  <br />
  <br />
  <div class="field">
    <%= rat.label t "internships.attributes.training_rating" %><br />
    <div class="edit-rating" id="training_success"><%= render_stars(@rating.training_success, self) %></div>
    <%= rat.hidden_field :training_success %>
  </div>
  <br />
  <br />
  <div class="field">
    <%= rat.label t "internships.attributes.atmosphere_rating" %><br />
    <div class="edit-rating" id="atmosphere"><%= render_stars(@rating.atmosphere, self) %></div>
    <%= rat.hidden_field :atmosphere %>
  </div>
  <br />
  <br />
  <div class="field">
    <%= rat.label t "internships.attributes.supervision_rating" %><br />
    <div class="edit-rating" id="supervision"><%= render_stars(@rating.supervision, self) %></div>
    <%= rat.hidden_field :supervision %>
  </div>
  <br />
  <br />
  <div class="field">
    <%= rat.label t "internships.attributes.appreciation_rating" %><br />
    <div class="edit-rating" id="appreciation"><%= render_stars(@rating.appreciation, self) %></div>
    <%= rat.hidden_field :appreciation %>
  </div>
  <% end %>
  <br />
  <br />
  <div class="field">
    <%= f.label t "internships.attributes.recommend"  %>
    <div class="edit-recommend1">
      <% if @internship.recommend %>
          <i id="recommend up" class="icon-thumbs-up green-thumb recommend-edit icon-2x"></i>
        <% else %>
          <i id="recommend down" class="icon-thumbs-down red-thumb recommend-edit icon-2x"></i>
        <% end %>
    </div>
    <%= f.hidden_field :recommend, value: @internship.recommend ? 1 : 2 %>
  </div>
  <br />
  <br />
  <div class="actions">
    <%= f.submit t(params[:action] == 'new' ? 'internships.create' : 'internships.update'), class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
