<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>Major</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.last_name %></td>
    <td><%= user.first_name %></td>
    <td><%= user.major %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Show', user, class: "btn btn-success pull-right" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-success pull-right" %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path,  class: "btn btn-success" %>
