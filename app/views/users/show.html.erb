<p id="notice"><%= notice %></p>

<p>
  <b><%= t "users.attributes.last_name" %> :</b>
  <%= @user.last_name %>
</p>

<p>
  <b><%= t "users.attributes.first_name" %> :</b>
  <%= @user.first_name %>
</p>

<p>
  <b><%= t "users.attributes.major" %> :</b>
  <%= @user.major %>
</p>

<p>
  <b><%= t "users.attributes.email" %> :</b>
  <%= @user.email %>
</p>

<p>
  <b><%= t "users.attributes.role" %> :</b>
  <%= @user.role %>
</p>


<p>
  <b><%= t "users.attributes.picture" %> :</b>
  <%= image_tag(@user.picture_url, :width => 600) if @user.picture.present? %>
</p>


<%= link_to (t "buttons.edit"), edit_user_path(@user), class: "btn btn-success" %>
<%= link_to (t "buttons.back"), users_path, class: "btn" %>
