<%= form_for(@user, url: users_path, method: :post) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="form-block3">

<div class="row">

<div class="span4">
  <div class="field" id="field-titles">
    <%= f.label t "users.attributes.email" %><br />
    <%= f.text_field :email, class: "textlabel" %>
  </div>
</div>

<div class="span4">
  <div class="field" id="field-titles">
    <%= f.label t "users.attributes.publicmail"  %>
    <%= f.check_box :publicmail %>
  </div>
</div>

</div>




<div class="row">

<div class="span4">
  <div class="field" id="field-titles">
    <%= f.label t "users.attributes.password" %><br />
    <%= f.password_field :password %>
  </div>
</div>
<div class="span4">
    <div class="field" id="field-titles">
    <%= f.label t "users.attributes.mailnotif"  %>
    <%= f.check_box :mailnotif %>
    </div>
</div>

</div>



<div class="row">
<div class="span4">
  <div class="field" id="field-titles">
    <%= f.label t "users.attributes.password_confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
</div>
</div>


<div class="row">
<div class="span1 offset7"> 
  <div class="actions" style="float: right">
    <%= f.submit t(params[:action] == 'new' ? 'users.create' : 'users.update'), class: "btn btn-success" %>
  </div>
</div>
<% end %>
